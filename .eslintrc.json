{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-underscore-dangle": 0,
    "func-names": ["error", "as-needed"],
    "class-methods-use-this": 0,
    "import/no-unresolved": [2, { "ignore": ["\\.png$", "\\.webp$"] }],
    "no-param-reassign": ["error", { "props": false }]
  }
}
